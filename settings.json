{
  "parsing":{
    "xpath":{
      "description":"breakfast_menu/*[name()=\"food\" and ./name/text()=\"Belgian Waffles\"]/description/text()",
      "price":"breakfast_menu/*[name()=\"food\" and ./name/text()=\"Belgian Waffles\"]/price/text()"
    },
    "regexp":{
      "qualification":"<qualification>(.*)</qualification>"
    }
  },
  "mapping":[
    {
      "request":{
        "method":"POST",
        "url":"/test/post",
        "header":{
          "Content-Type":"text/plain"
        },
        "content":{
          "description":"Two of our famous Belgian Waffles with plenty of real maple syrup"
        }
      },
      "response":{
        "content":"response.txt"
      }
    },
    {
      "request":{
        "method":"GET",
        "url":"/test/get"
      },
      "response":{
        "content":"Hello GET"
      }
    }
  ]
}